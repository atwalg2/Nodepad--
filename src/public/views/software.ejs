    <script>
    $('.dropdown-inverse li > a').click(function(e){
      $('#next-btn').attr('onclick', "toggleAccordian('#collapse1', '#collapse2'); colorHeader('#heading-one', '#changeSystem')");
      $('.status').text(this.innerHTML);
      $('.status').append('<span class=\"caret\"></span>')
    });
    </script>
    
    <footer>
      <% include ./partials/footer %>
    </footer>
    
  </body>
</html> 