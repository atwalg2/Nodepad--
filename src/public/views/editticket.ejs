
<!DOCTYPE html>
<html>
  <head>

    <!-- Dependencies -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.13/css/jquery.dataTables.css">
    <style><background-color: blue></style>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/css/editticket.css">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


    <% include ./partials/head %>
  </head>
  
  <body>
    <header>
      <% include ./partials/header %>
    </header>
   <script type="text/javascript" src="../view.json></script>
<script type="text/javascript" src="javascrip.js"></script>
<script type="text/javascript">
var data = <%- data %>;
  console.log(data);
</script>
    <div class="card" id="super-card-mytickets">
        <hr id="divider">
        <hr id="divider1">
        <hr id="divider2">
        <div class="super-panel-heading">
          <a href="/categories" class="channel-name stripe-two">Edit Ticket</a>
        </div>

        <div class="container" id="button-container">

          <div id="buttons">
           <button id="edit-btn" type="button" class="btn btn-outline-secondary">Edit</button> 
           <button id="resolve-btn" type="button" class="btn btn-outline-secondary">Resolve</button>
           <button id="exit-btn" type="button" class="btn btn-outline-secondary">Exit</button> 
          </div>
        </div>
        <div class="container" id="body-container">
          <div id="cate-lb">
            <form1>
              <fieldset0>
                <label class="control-label">Category</label><p><span class="control-label" id="categ"></span></p>
                <label class="control-label" id="H1"></label><p><span class="control-label" id="L1"></span></p>
                <label class="control-label" id="H2"></label><p><span class="control-label" id="L2"></span></p>

              </fieldset0>
              <fieldset1>
                <label class="control-label" id="H3"></label><p><textarea id="L3"></textarea></p>
                <label class="control-label" id="H4"></label><p><span class="control-label" id="L4"></span></p>
                <label class="control-label" id="H5"></label><p><span class="control-label" id="L5"></span></p>
              </fieldset1>
            </form1>
          </div>
          <div>
            <p0 id="symptoms0"></p0>
            <p1 id="symptoms1"></p1>
            <p2 id="symptoms2"></p2>
            <p3 id="symptoms3"></p3>
            <p4 id="symptoms4"></p4>
          </div>

          <div id="change-lb">
            <label class="control-label">Changes:</label>
          </div>
          <div id="changes-text">
            <textarea id="change_box"></textarea>
          </div>
          
          <div id="desc-lb">
            <label class="control-label">Description of the problem:</label>
          </div>
          <div id="desc-text">
            <textarea id="text_results" readonly></textarea>
          </div>
          <div id="stat-lb">
            <label class="control-label">Status:</label>
            <span class="label label-default" id="stat"></span>
          </div>
          <button type="button" id="confirm-btn" class="btn btn-primary">Confirm</button>

        </div>
      </div>

      <script>
        $(document).ready(function(){

          if(data[0].Category == "Hardware"){

            var parsed = (data[0].Symptoms).split("|");
            var n = parsed.length;                          //how many entries in array
            var headings = ["Equip Type","Asset Tag","Device","Error Message",""]
            var hids = ["#H1","#H2", "#H3", "#H4", "#H5"];
            var ids = ["#L1","#L2", "#L3", "#text_results", "#L4", "#L5"];
            for(var i=0;i<n;i++){
              if(parsed[i] ==" undefined"){
                parsed[i]="N/A";
                
              }
              $(hids[i]).text(headings[i]);
              $(ids[i]).text(parsed[i]);
            }
            $("#L4").attr('style', "line-height: 22px; width: auto; min-width: 0px; max-width: 95%; max-height: 50em; white-space: normal; word-wrap: break-word; inline-block;  font-family: 'Inder', sans-serif;color:#666;margin-bottom: 15px;") 
          }
          else if(data[0].Category == "Software"){

            var parsed = (data[0].Symptoms).split("|");
            var n = parsed.length;                          //how many entries in array
            var headings = ["Affected Systems","System Status","Problem Cause","",""]
            var hids = ["#H1","#H2", "#H3", "#H4", "#H5"];
            var ids = ["#L1","#L2","#text_results", "#L3", "#L4", "#L5"];
            for(var i=0;i<n;i++){
              if(parsed[i] ==" undefined"){
                parsed[i]="N/A";
                
              }
              $(hids[i]).text(headings[i]);
              $(ids[i]).text(parsed[i]);
            }
            $("#L3").attr('style', "line-height: 130%;background-color: #eeeeee;border: 0; width: 100%; min-width: 0px; max-width: 100%; max-height: 10em; white-space: normal; word-wrap: break-word; inline-block;font-family: 'Inder', sans-serif;color:#666;margin-bottom: 15px; height:9em;");
          }
          else if(data[0].Category == "Service"){
            var parsed = (data[0].Symptoms).split("|");
            var n = parsed.length;                          //how many entries in array
            if(parsed[0]=="System Access"){
              var headings = ["Service Type","","","",""];
              var ids = ["#L1","#L2","#L3", "#L4", "#L5"];
            }
            else if(parsed[0]=="Move Equipment"){
              var headings = ["Service Type","System Access","Asset Tags","Destination",""];
              var ids = ["#L1","#L2","#L3", "#L4", "#L5"];
            }
            else if(parsed[0]=="New Software"){
              var headings = ["Service Type","Software Name","","",""]
              var ids = ["#L1","","", "", "#L2"];
            }
            else if(parsed[0]=="New Equipment"){
              var headings = ["Service Type","","","",""];
              var ids = ["#L1","#L2","#L3", "#L4", "#L5"];
            }
            else{
              var headings = ["Service Type","System Access","Asset Tags","",""];
              var ids = ["#L1","#L2","#L3", "#L4", "#L5"];
            }
            var hids = ["#H1","#H2", "#H3", "#H4", "#H5"];

            for(var i=0;i<n;i++){
              if(parsed[i] ==" undefined" || parsed[i] =="undefined" || parsed[i] ==" undefined " || parsed[i] ==" "){
                parsed[i]="";
              }
              $(hids[i]).text(headings[i]);
              $(ids[i]).text(parsed[i]);
            }
          }

          $('#categ').text(data[0].Category);
          $('#stat').text(data[0].CallStatus);
        });
      </script>

 <footer>
      <% include ./partials/footer %>
    </footer>
  </body>
</html>